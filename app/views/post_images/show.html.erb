<div class="container">
  <h1>投稿詳細</h1>
    <%= attachment_image_tag @post_image.user, :profile_image, fallback: "/assets/人物アイコン", size:"100x100" %>
    <div><%= @post_image.user.name %></div>
    <%= @post_image.introduction %>

    <div id="show_like_<%= @post_image.id %>">
      <%= render 'favorites/favorite', post_image: @post_image %>
    </div>

    <%= render_with_hashtags(@postimage.hashbody) %>

  <% if user_signed_in? %>
    <%= link_to "編集する", edit_post_image_path(@post_image) %>
    <%= link_to "削除する", post_image_path(@post_image), method: :delete %>
  <% end %>
  
  <div class="row">
    <ul>
      <li class="comment-create">
        <h3 class="text-left title">コメント</h3>
      </li>
      <li id="comments_area">
        <%= render partial: 'post_comments/index', locals: { comments: @comments } %>
      </li>
    </ul>
      <hr>
      <% if user_signed_in? %>
        <div class="comment-create">
          <h3 class="text-left">コメントを投稿する</h3>
          <%= render partial: 'post_comments/form', locals: { comment: @comment, post_image: @post_image } %>
        </div>
      <% end %>
  </div>
</div>