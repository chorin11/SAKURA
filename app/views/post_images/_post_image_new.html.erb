<div class="container">
  <div class="row">
    <h2>新着投稿</h2>
      <div class="col-lg-3">
        <% post_images.each do |post_image| %>
          <%= link_to post_image_path(post_image) do %>
            <%= attachment_image_tag post_image, :image, size:"190x190",class: "coffee_image_media" %>
          <% end %>
          <%= link_to user_path(post_image.user_id) do %>
            <%= attachment_image_tag post_image.user, :profile_image, fallback: "/assets/人物アイコン", class:"profile-img-circle", size:"30x30" %>
            <%= post_image.user.name %>
          <% end %>
          <div id="index_favorite_<%= post_image.id %>">
            <%= render 'favorites/favorite', post_image: post_image %>
          </div>
        <% end %>
      </div>
  </div>
</div>