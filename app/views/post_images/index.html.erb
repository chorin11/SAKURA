<div class="container">
  <div class="row">
    <h3>みんなの投稿</h3>

      <% @post_images.each do |post_image| %>
        <div class="new-form">
          <div class="col-lg-3">
            <div class="card">
            <%= link_to user_path(post_image.user_id), data: {"turbolinks" => false} do %>
              <div class="text-center", style="padding-top:15px;">
                <%= attachment_image_tag post_image.user, :profile_image, fallback: "/assets/no-image-human.jpeg", class:"icon-img", size:"20x20" %>
                <%= post_image.user.name %>
              <% end %>
              </div>
              <%= link_to post_image_path(post_image) do %>
                <div class="text-center card-img">
                  <%= attachment_image_tag post_image, :image, size:"160x160",class: "coffee_image_media" %><br>
                </div>
              <% end %>

              <div class="text-center", style="padding-top:15px;">
                <%= post_image.introduction.truncate(10) %>
              </div>

              <div class="text-center", style="padding:10px 5px;">
                <div id="index_favorite_<%= post_image.id %>">
                  <%= render 'favorites/favorite', post_image: post_image %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>
  <%= paginate @post_total %>
</div>
    