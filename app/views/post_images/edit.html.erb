<div class="container text-center">
  <div class="row">
    <div class="panel panel-default col-lg-10 col-xs-offset-1">
      <div class="panel-heading clearfix">
        <h3 class="panel-title">投稿を編集する</h3>
      </div>

      <div class="panel-body user-profile">
        <%= form_with model: @post_image, data:{remote: false} do |f| %>
          <h4>画像</h4>
          <div class="col-xs-offset-4">
            <%= f.attachment_field :image %>
          </div>
      
          <h4>投稿内容</h4>
          <%= f.text_area :introduction, class:"form-control" %>

          <h4>ハッシュタグ入力欄</h4>
          <%= f.text_area :hashbody, class:"form-control" %>

          <div><%= f.submit "変更を保存する", class:"btn btn-primary" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>