<div class="conteiner">
  <div class="row card-signin">
    <div class="col-lg-10 col-xs-offset-1 card-signin-sub">
      <h3 class='col-xs-offset-1 signin-icon'>会員登録</h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group row signin-icon">
            <div class='col-lg-4 col-xs-offset-2'>
              <h4><%= f.label :ニックネーム %></h4>
              </div>
              <div class='col-lg-8 col-xs-offset-2'>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
            </div>
          </div>

          <div class="form-group row signin-icon">
            <div class='col-lg-4 col-xs-offset-2'>
              <h4><%= f.label :メールアドレス %></h4>
            </div>
            <div class='col-lg-8 col-xs-offset-2'>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
          </div>

          <div class="form-group row signin-icon">
            <div class='col-lg-4 col-xs-offset-2'>
              <h4><%= f.label :自己紹介文 %></h4>
            </div>
            <div class='col-lg-8 col-xs-offset-2'>
              <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class: 'form-control' %>
            </div>
          </div>

          <div class="form-group row signin-icon">
            <div class='col-lg-4 col-xs-offset-2'>
              <h4><%= f.label :好きな和菓子 %></h4>
            </div>
            <div class='col-lg-8 col-xs-offset-2'>
              <%= f.text_field :favorite_sweets, autofocus: true, autocomplete: "favorite_sweets", class: 'form-control' %>
            </div>
          </div>

          <div class="form-group row signin-icon">
            <div class='col-lg-4 col-xs-offset-2'>
              <h4>
                <%= f.label :パスワード%>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字)</em>
                <% end %>
              </h4>
            </div>
            <div class='col-lg-8 col-xs-offset-2'>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
            </div>
          </div>

          <div class="form-group row signin-icon">
            <div class='col-lg-4 col-xs-offset-2'>
              <h4><%= f.label :パスワード（確認用） %></h4>
            </div>
            <div class='col-lg-8 col-xs-offset-2'>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>
          </div>

          <div class='col-lg-10 text-right signin-icon'>
            <%= link_to "会員用ログイン", new_session_path(resource_name) %>
          </div>

          <div class='col-lg-4 col-xs-offset-4 signin-icon-btn'>
            <%= f.submit "会員登録",class:'btn btn-primary btn-block', style:"margin-top:15px;" %>
          </div>
        <% end %>
        
        
      </div>
    </div>
</div>