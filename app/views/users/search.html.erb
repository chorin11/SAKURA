<div class="container">
  <div class="row">

    <% if @user_or_post =="1" %>
      <h1>ユーザ</h1>
      <table>
        <% @users.each do |user| %>
          <thead>
            <tr>
              <th><%= attachment_image_tag @user, :profile_image_id, :fill, 60, 60, fallback: "/assets/人物アイコン" %></th>
              <th><%= user.name %></th>
              <td><%=link_to "見る" ,user_path(user.id) %></td>
            </tr>
          </thead>
        <% end %>
      </table>

    <% elsif @user_or_post =="2" %>
      <h1>投稿</h1>
        <table>
          <% @posts.each do |post| %>
            <div class="card text-center col-lg-3" style="margin:15px;">
              <p class="index-post-box-top">
                <%= post.created_at.strftime("%Y/%m/%d") %>
              </p>
              <%= attachment_image_tag post, :image, size:"160x160",class: "coffee_image_media" %>
              <%= post.introduction %>
              <%=link_to "詳細" ,post_image_path(post.id) %>        
            </div>
          <% end %>
        </table>
    <% else %>
    <% end %>

  </div>
</div>