<div class="container text-center">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <h3 class="panel-title">プロフィール編集</h3>
      </div>

      <div class="panel-body user-profile">
        <%= form_with model:@user do |user| %>
            <div class='profile-img col-lg-4 col-xs-offset-1'>
              <%= attachment_image_tag @user, :profile_image_id, size: '200x200', fallback: "/assets/人物アイコン" %>
              <%= user.attachment_field :profile_image, placeholder: "プロフィール画像" %>
              <%= user.submit "プロフィール画像を変更する", class:"btn btn-info" %>
            </div>

        <div class="form-group row">
          <div class='col-lg-4'>
            <h4><%= user.label :ニックネーム %></h4><br>
          </div>
          <div class='col-lg-5'>
            <%= user.text_field :name %>
          <div>
        </div>

        <div class="form-group row">
          <div class='col-lg-4 col-xs-offset-3'>
            <h4><%= user.label :メールアドレス %></h4><br>
          </div>
          <div class='col-lg-8 col-xs-offset-2'>
            <%= user.email_field :email %>
          </div>
        </div>

        <div class="form-group row">
          <div class='col-lg-4 col-xs-offset-3'>
            <h4><%= user.label :自己紹介文 %></h4>
          </div>
          <div class='col-lg-8 col-xs-offset-2'>
            <%= user.text_area :introduction %>
          </div>
        </div>

        <div class="form-group row">
          <div class='col-lg-4 col-xs-offset-3'>
            <h4><%= user.label :好きな和菓子 %></h4>
          </div>
          <div class='col-lg-8 col-xs-offset-2'>
            <%= user.text_field :favorite_sweets %>
          </div>
        </div>

        <%= user.submit "プロフィールを変更する", class:"btn btn-info" %>
      </div>
          <% end %>
    </div>
  </div>
</div>