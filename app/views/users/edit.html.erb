<div class="container">
  <div class="row">
    <div class="card-profile clearfix">
      <h1>プロフィール編集</h1>

      <div class="user-profile">
        <%= form_with model:@user do |user| %>
            <div class='profile-img col-lg-4 col-xs-offset-1'>
              <%= attachment_image_tag @user, :profile_image_id, size: '200x200', fallback: "/assets/人物アイコン" %>
              <%= user.attachment_field :profile_image, placeholder: "プロフィール画像" %>
              <%= user.submit "プロフィール画像を変更する", class:"btn btn-info" %>
            </div>

        <div class="form-group row">
          <div class='col-lg-4 col-xs-offset-1'>
            <h4><%= user.label :ニックネーム %></h4><br>
          </div>
          <div class='col-lg-5 col-xs-offset-1'>
            <%= user.text_field :name, class: 'form-control' %>
          <div>
        </div>

        <div class="form-group row">
          <div class='col-lg-5'>
            <h4><%= user.label :メールアドレス %></h4><br>
          </div>
          <div class='col-lg-7 col-xs-offset-1'>
            <%= user.email_field :email, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <div class='col-lg-4'>
            <h4><%= user.label :自己紹介文 %></h4>
          </div>
          <div class='col-lg-8 col-xs-offset-1'>
            <%= user.text_area :introduction, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <div class='col-lg-5'>
            <h4><%= user.label :好きな和菓子 %></h4>
          </div>
          <div class='col-lg-7 col-xs-offset-1'>
            <%= user.text_field :favorite_sweets, class: 'form-control' %>
          </div>
        </div>

        <%= user.submit "プロフィールを変更する", class:"btn btn-info" %>
      </div>
          <% end %>
    </div>
  </div>
</div>