<div class="container">
  <div class='row'>
    <div class="col-lg-10 card-login">
      <h3 class="col-lg-offset-1">会員の方</h3></br>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-group row">
            <div class='col-lg-3 col-lg-offset-1'>
              <h4><%= f.label :メールアドレス %></h4>
            </div>
            <div class='col-lg-6'>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
          </div>

          <div class="form-group row">
            <div class='col-lg-3 col-lg-offset-1'>
              <h4><%= f.label :パスワード %></h4>
            </div>
            <div class='col-lg-6'>
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
            </div>
          </div>

        <div class="col-lg-10 text-right">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <p><%= link_to "パスワードを忘れた方", new_password_path(resource_name) ,:style=>"font-size:15px;"%></p>
          <% end %>
        </div>
        <div class="col-lg-10 text-right">
            <p><%= link_to "新規登録", new_registration_path(resource_name) %></p>
        </div>

        <div class="login-btn col-lg-4 col-xs-offset-4">
          <%= f.submit "ログイン" , class:'btn btn-primary btn-block', style:"margin-top:15px;" %>
        </div>
      </div>
    </div>
        <% end %>
</div>