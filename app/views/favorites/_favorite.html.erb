<% if user_signed_in? %>
  <% if current_user.already_favorited?(post_image) %>
    <%= link_to post_image_favorites_path(post_image), method: :delete, remote: true do %>
      <i class="fa fa-heat" aria-hidden="true" style="color: red;">
        <%= post_image.favorites.count %>
      </i>
    <% end %>
  <% elsif %>
    <%= link_to post_image_favorites_path(post_image), method: :post, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: #C0C0C0;">
        <%= post_image.favorites.count %>
      </i>
    <% end %>
  <% else %>
    <i class="fa fa-heart" aria-hidden="true">
      <%= post_image.favorites.count %>
    </i>
  <% end %>
<% end %>